{
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jasmine": true,
    "mocha": true,
    "builtin": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "modules": true,
          "classes": true,
          "experimentalObjectRestSpread": true
      }
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "camelcase": 2,
    "curly": [
      2,
      "all"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "max-len": [
      2,
      80,
      2,
      {
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ],
    "no-console": 0,
    "no-inner-declarations": [
      2,
      "both"
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "require-jsdoc": 0,
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "single"
    ]
  }
}
